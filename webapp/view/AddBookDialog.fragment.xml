<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="addBookDialog"
        title="Add New Book"
        contentWidth="400px">

        <VBox renderType="Bare" class="sapUi-Std-PaddingS">
            <Input id="newName" placeholder="{i18n>namePlaceHolder}"  required="true" liveChange=".onLiveValidate" />
            <Input id="newAuthor" placeholder="{i18n>authorPlaceHolder}" required="true" liveChange=".onLiveValidate" />
            <ComboBox id="newGenre" items="{
                path: 'genreModel>/genres'}" placeholder="{i18n>genrePlaceHolder}" required="true" change=".onLiveValidate" >
                <core:Item key="{genreModel>key}" text="{genreModel>text}"  />
            </ComboBox>
            <DatePicker id="newDate" placeholder="{i18n>datePlaceHolder}" displayFormat="yyyy-MM-dd"
                 valueFormat="yyyy-MM-dd" required="true" change=".onLiveValidate"/>
            <Input id="newQuantity" placeholder="{i18n>quantityPlaceHolder}" type="Number" required="true" liveChange=".onLiveValidate"/>
        </VBox> 

        <beginButton>
            <Button text="{i18n>addDialogButton}" press=".handleAddButton"/>
        </beginButton>

        <endButton>
            <Button text="{i18n>cancelDialogButton}" press=".handleCancelButton"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>