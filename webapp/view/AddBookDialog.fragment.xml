<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="addBookDialog"
        title="Add New Book"
        contentWidth="400px">

        <VBox renderType="Bare" class="paddingDialog">
            <Input id="newName" placeholder="Name"  required="true" />
            <Input id="newAuthor" placeholder="Author" required="true" />
            <ComboBox id="newGenre" items="{
                path: 'genreModel>/genres'}" placeholder="Genre" required="true">
                <core:Item key="{genreModel>key}" text="{genreModel>text}" />
            </ComboBox>
            <DatePicker id="newDate" placeholder="YYYY-MM-DD" displayFormat="yyyy-MM-dd"
                 valueFormat="yyyy-MM-dd" required="true"/>
            <Input id="newQuantity" placeholder="Available Quantity" type="Number" required="true"/>
        </VBox> 

        <beginButton>
            <Button text="Add" press=".handleAddButton"/>
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".handleCancelButton"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>