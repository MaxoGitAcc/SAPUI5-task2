<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiSmallMergin">

                <Toolbar >
                    <ToolbarSpacer />
                    <SearchField id="searchField"
                        width="50%"
                        placeholder="Search by title..."
                        search=".onSearch"/>
                </Toolbar>
                <Table id="bookTable" items="{bookModel1>/books}">

                    <headerToolbar>
                        <Toolbar id="bookTableToolvbar">
                            <Title id="bookTableTitle" text="Books" />
                        </Toolbar>
                    </headerToolbar>

                    <columns>
                        <Column ><Text text="ID"/></Column>
                        <Column ><Text text="Name"/></Column>
                        <Column ><Text text="Author"/></Column>
                        <Column ><Text text="Genre"/></Column>
                        <Column ><Text text="Release Data"/></Column>
                        <Column ><Text text="Available Quantity"/></Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{bookModel1>ID}"></Text>
                                <Text text="{bookModel1>Name}"></Text>
                                <Text text="{bookModel1>Author}"></Text>
                                <Text text="{bookModel1>Genre}"></Text>
                                <Text text="{bookModel1>ReleaseDate}"></Text>
                                <Text text="{bookModel1>AvailableQuantity}"></Text>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

            </VBox>
        </content>
    </Page>
</mvc:View>