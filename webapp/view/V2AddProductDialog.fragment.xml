<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="v2AddProductDialog" title="Add new Product" contentWidth="400px">

        <VBox class="sapUi-Std-PaddingS">
            <Input id="v2NewProductName" placeholder="{i18n>v2NameInputPlaceholder}" required="true" liveChange=".onLiveValidationChangeV2" value="{oDataV2Model>Name}"/>
            <Input id="v2NewProductDescription" placeholder="{i18n>v2DescriptionInputPlaceholder}" required="true"  liveChange=".onLiveValidationChangeV2" value="{oDataV2Model>Description}"/>
            <DatePicker id="v2NewProductReleaseDate" 
                placeholder="{i18n>v2ReleaseDateInputPlaceholder}" 
                displayFormat="dd-MM-yyyy" 
                valueFormat="yyyy-MM-dd" 
                required="true" change=".onLiveValidationChangeV2" dateValue="{oDataV2Model>ReleaseDate}"/>

            <DatePicker id="v2NewProductDiscontinuedDate" 
                placeholder="{i18n>v2DiscontinuedDateInputPlaceholder}" 
                displayFormat="dd-MM-yyyy" 
                valueFormat="yyyy-MM-dd" 
                required="true" change=".onLiveValidationChangeV2" dateValue="{oDataV2Model>DiscontinuedDate}"/>
            <Input id="v2NewProductRating" placeholder="{i18n>v2RatingInputPlaceholder}" type="Number" required="true" liveChange=".onLiveValidationChangeV2" value="{oDataV2Model>Rating}"/>
            <Input id="v2NewProductPrice" placeholder="{i18n>v2PriceInputPlaceholder}" type="Number" required="true" liveChange=".onLiveValidationChangeV2" value="{oDataV2Model>Price}"/>
        </VBox>

        <beginButton>
            <Button text="{i18n>v2FragmentAddButton}" press=".onDialogSaveBtnPressV2"/>
        </beginButton>

        <endButton>
            <Button text="{i18n>v2FragmentCaneleButton}" press=".onDialogCancelBtnPressV2"/>
        </endButton>

    </Dialog>

</core:FragmentDefinition>
